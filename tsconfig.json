{
    "compilerOptions": {
        "outDir": "./public/",
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
    },

    "include": ["src/**/*"]
}
  